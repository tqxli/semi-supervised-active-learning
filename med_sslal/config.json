{
    "name": "frcnn_med_alssl",
    "n_gpu": 1,
    "seed": 202108, 
    "n_workers": 2,
    "batch_size": 4,

    "arch": {
        "type": "FasterRCNN",
        "args": {
            "backbone_name": "resnet50",
            "fpn": true,
            "pretrained": true,
            "num_classes": 2
        }
    },

    "dataset": {
        "type": "DeepLesion",
        "args": {
            "root": "/content/drive/MyDrive/data/DeepLesion",
            "validation_split": 0.2,
            "dataset_type": "non-specified",
            "lesion_type": "lung"
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 3e-4,
            "weight_decay": 1e-8,
            "amsgrad": true
        }
    },

    "metrics": ["sensitivity_k_fps"], 

    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 30
        }
    },

    "al_settings": {
        "num_cycles": 3,
        "type": "ActiveLearningHelper",
        "args": {
            "init_num": 400,
            "budget_num": 200,
            "al_criterion": ["localization_tightness", "k_means_diversity"]
        }
    },

    "ssl_settings": {
        "include_pseudolabels":true
    },

    "trainer": {
        "epochs": 50,
        "save_dir": "/content/drive/MyDrive/exp_results",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
